        // --- Functions ---

        // 1. Toggle Sidebar Visibility (for mobile)
        function toggleSidebar() {
            // Check if the screen is mobile (less than md breakpoint is 768px)
            if (window.innerWidth < 768) {
                sidebar.classList.toggle('hidden-mobile');
                overlay.classList.toggle('hidden');
            }
        }

        // 2. Load Content for the selected page
        function loadPageContent(pageName) {
            const data = pageData[pageName];
            
            // Update the main title
            pageTitle.textContent = pageName;
            
            // Update the content block
            pageContent.innerHTML = data.content;
            
            // Update active menu link
            menuItems.forEach(item => {
                // 1. Remove active styles
                item.classList.remove('bg-blue-50', 'border-l-4', 'border-portal-blue', 'text-portal-blue');
                item.classList.add('text-gray-700'); 
                item.removeAttribute('aria-current');

                if (item.getAttribute('data-page') === pageName) {
                    // 2. Apply new active styles
                    item.classList.add('bg-blue-50', 'border-l-4', 'border-portal-blue', 'text-portal-blue');
                    item.classList.remove('text-gray-700');
                    item.setAttribute('aria-current', 'page');
                }
            });
        }


        // --- Event Listeners ---
        
        // Toggle menu on hamburger click (mobile)
        menuToggle.addEventListener('click', toggleSidebar);
        
        // Close menu on overlay or close button click (mobile)
        overlay.addEventListener('click', toggleSidebar);
        closeMenuToggle.addEventListener('click', toggleSidebar);

        // Handle navigation clicks
        menuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault(); // Prevent standard link behavior
                const pageName = item.getAttribute('data-page');
                loadPageContent(pageName);
                
                // Hide sidebar after selection on mobile
                if (window.innerWidth < 768) {
                    toggleSidebar();
                }
            });
        });

        // Initialize the app with the Dashboard content
        window.onload = () => {
             // Forcing sidebar to show on desktop if it was closed via mobile logic
             if (window.innerWidth >= 768) {
                sidebar.classList.remove('hidden-mobile');
                overlay.classList.add('hidden');
             }
            loadPageContent('Dashboard');
        };

        // Handle window resize for responsiveness
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                // On desktop, ensure sidebar is visible and mobile overlay is hidden
                sidebar.classList.remove('hidden-mobile');
                overlay.classList.add('hidden');
            } else {
                // On mobile, if the sidebar is open, keep the overlay active
                if (!sidebar.classList.contains('hidden-mobile')) {
                    overlay.classList.remove('hidden');
                }
            }
        });

    </script>
</body>
</html>
